{% extends 'base.html.twig' %}
{% block title 'Company' %}
{% block pageTitle 'Tree' %}
{% block pageSubtitle 'Tree of employee' %}

{% block body %}
    <div class="row btn-add">
        <div class="col-6">
            <a href="{{ path('user.create') }}" class="btn float-right btn-lg btn-success" role="button" aria-disabled="true">Add</a>
        </div>
    </div>

    <div class="row">
        <p>
            {% for user in usersTree %}
                {{ user[2] }} {{ user[3] }} <br />
            {% else %}
                No user found
            {% endfor %}
        </p>
    </div>
{% endblock %}